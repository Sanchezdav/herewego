<h1 class="text-4xl text-center font-thin">Sign Up</h1>
<div class="w-full mt-4">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal w-3/4 mx-auto" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="flex flex-col mt-4"">
      <%= f.text_field :name, autofocus: true, class: 'flex-grow input', placeholder: "Full Name" %>
    </div>

    <div class="flex flex-col mt-4">
      <%= f.email_field :email, autofocus: false, class: 'flex-grow input', placeholder: "Email Address" %>
    </div>

    <div class="flex flex-col mt-4">
      <%= f.password_field :password, autocomplete: "off", class: 'flex-grow input', placeholder: 'Password' %>
    </div>

    <div class="flex flex-col mt-4">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'flex-grow input', placeholder: 'Confirm Password' %>
    </div>

    <div class="flex flex-col mt-8">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
